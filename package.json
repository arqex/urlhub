{
  "name": "urlhub",
  "version": "1.0.0-beta.2",
  "description": "Another router library, yet the simplest one.",
  "main": "dist/urlhub.js",
  "module": "dist/urlhub.mjs",
  "typings": "dist/urlhub.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arqex/urlhub"
  },
  "scripts": {
    "prepare": "rm -rf .husky/_ && husky install",
    "lint": "eslint --ext .js,.ts src/",
    "lint:fix": "eslint --ext .js,.ts --fix src/",
    "start": "rollup -c -w",
    "docs": "typedoc --out docs --theme minimal src",
    "prebuild": "rimraf dist",
    "build": "rollup -c",
    "release": "npm run release:patch",
    "release:patch": "npm run build && standard-version --release-as patch",
    "release:minor": "npm run build && standard-version --release-as minor",
    "release:major": "npm run build && standard-version --release-as major",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "deploy": "rimraf docs/ && npm run docs",
    "playground": "http-server playground -c-1 -p 8080"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "keywords": [
    "rollup",
    "typescript",
    "library",
    "boilerplate"
  ],
  "author": {
    "name": "Javier Marquez",
    "url": "http://arqex.com"
  },
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.19.11",
    "http-server": "^14.1.1",
    "husky": "^7.0.2",
    "jest": "^29.7.0",
    "rimraf": "^3.0.2",
    "rollup": "^4.9.5",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
